<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox xmlns="http://javafx.com/javafx/8.0.171" xmlns:fx="http://javafx.com/fxml/1" fx:controller="ProductEdit.ProductEditController">
    <children>
        <Label text="Редактировать продукт" />
        <ListView fx:id="productListView" />
        <HBox>
            <Label text="Новое название:" />
            <TextField fx:id="tfNewTitle" />
        </HBox>
        <HBox>
            <Label text="Новая цена" />
            <TextField fx:id="tfNewPrice" />
        </HBox>
        <HBox>
            <Label text="Новое количество:" />
            <TextField fx:id="tfNewAmount" />
        </HBox>
        <Button onAction="#clickEditProduct" text="Обновить продукт" />
    </children>
</VBox>
